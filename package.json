{
  "name": "http-responder",
  "version": "1.1.0",
  "description": "A very simple way to create an error response and send it only showing what you choose to.",
  "repository": "https://github.com/5c077m4n/http-responder/",
  "main": "./dist/index.js",
  "scripts": {
    "build": "./node_modules/.bin/eslint ./src/index.js && ./node_modules/.bin/minify src -d dist",
    "test": "mocha",
    "lint": "./node_modules/.bin/eslint ./src/index.js"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 6
    },
    "extends": "eslint:recommended",
    "rules": {}
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "env": {
      "production": {
        "presets": [
          "minify"
        ]
      }
    }
  },
  "keywords": [
    "http",
    "response",
    "error"
  ],
  "author": "Roee Shapira",
  "license": "ISC",
  "dependencies": {
    "camelcase": "^5.0.0"
  },
  "devDependencies": {
    "babel-minify": "^0.4.3",
    "chai": "^4.1.2",
    "eslint": "^5.3.0",
    "mocha": "^5.2.0"
  }
}
