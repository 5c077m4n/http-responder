{
	"name": "http-responder",
	"version": "2.2.1",
	"description": "A very simple way to create an error response and send it only showing what you choose to.",
	"keywords": [
		"http",
		"response",
		"error",
		"backend",
		"status",
		"statusCode"
	],
	"homepage": "https://5c077m4n.github.io/http-responder/",
	"repository": "https://github.com/5c077m4n/http-responder/",
	"license": "MIT",
	"author": "Roee Shapira",
	"sideEffects": false,
	"exports": {
		"import": "./packages/http-responder.esm/",
		"require": "./packages/http-responder.cjs/"
	},
	"main": "./packages/http-responder.cjs/src/index.js",
	"module": "./packages/http-responder.esm/src/index.js",
	"files": [
		"packages/http-responder.esm/**/*",
		"packages/http-responder.cjs/**/*",
		"packages/http-responder.umd/**/*"
	],
	"scripts": {
		"build": "rollup -c ./rollup.config.js",
		"clean": "lerna run clean",
		"lint": "eslint ./src/**/*.ts",
		"lint:staged": "lint-staged",
		"prepare": "run-s lint clean build test",
		"test": "jest"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "run-s lint build test"
		}
	},
	"lint-staged": {
		"**/package.json": [
			"sort-package-json",
			"git add"
		],
		"*.{ts,json,md}": [
			"prettier --write",
			"git add"
		],
		"*.{ts}": [
			"eslint --fix --ignore-pattern **/*.spec.ts",
			"git add"
		]
	},
	"devDependencies": {
		"@rollup/plugin-typescript": "3.*",
		"@types/jest": "^25.2.1",
		"@typescript-eslint/eslint-plugin": "^2.27.0",
		"@typescript-eslint/parser": "^2.27.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.10.0",
		"eslint-plugin-prettier": "^3.1.3",
		"husky": "^4.2.5",
		"jest": "^25.3.0",
		"lerna": "^3.20.2",
		"lint-staged": "^10.1.3",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.19.1",
		"rimraf": "^3.0.2",
		"rollup": "^2.6.1",
		"rollup-plugin-terser": "^5.3.0",
		"sort-package-json": "^1.41.0",
		"ts-jest": "^25.3.1",
		"tslib": "^1.11.1",
		"typescript": "^3.8.3"
	}
}
