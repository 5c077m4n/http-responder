{
	"name": "http-responder",
	"version": "2.1.3",
	"description": "A very simple way to create an error response and send it only showing what you choose to.",
	"repository": "https://github.com/5c077m4n/http-responder/",
	"main": "./packages/http-responder.cjs/src/index.js",
	"module": "./packages/http-responder.esm/src/index.js",
	"exports": {
		"default": "./packages/http-responder.esm/",
		"require": "./packages/http-responder.cjs/"
	},
	"sideEffects": false,
	"scripts": {
		"clean": "lerna run clean",
		"build:esm": "tsc --project ./build-config-files/tsconfig.esm.json",
		"build:cjs": "tsc --project ./build-config-files/tsconfig.cjs.json",
		"build:umd": "tsc --project ./build-config-files/tsconfig.umd.json",
		"build": "run-p build:*",
		"lint": "eslint ./src/**/*.ts",
		"lint:staged": "lint-staged",
		"test:all": "jest",
		"prepare": "run-s lint clean build test:all"
	},
	"keywords": [
		"http",
		"response",
		"error",
		"backend",
		"status",
		"statusCode"
	],
	"author": "Roee Shapira",
	"homepage": "https://5c077m4n.github.io/http-responder/",
	"license": "MIT",
	"devDependencies": {
		"@types/jest": "^24.0.23",
		"@typescript-eslint/eslint-plugin": "^2.11.0",
		"@typescript-eslint/parser": "^2.11.0",
		"eslint": "^6.7.2",
		"eslint-config-prettier": "^6.7.0",
		"eslint-plugin-prettier": "^3.1.1",
		"husky": "^3.1.0",
		"jest": "^24.9.0",
		"lerna": "^3.19.0",
		"lint-staged": "^9.5.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.19.1",
		"rimraf": "^3.0.0",
		"ts-jest": "^25.1.0",
		"typescript": "^3.7.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "run-s lint test:all"
		}
	},
	"lint-staged": {
		"*.{ts}": [
			"eslint --fix --ignore-pattern **/*.spec.ts",
			"git add"
		],
		"*.{ts,json,md}": [
			"prettier --write",
			"git add"
		]
	}
}
