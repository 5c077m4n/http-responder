{
	"name": "http-responder",
	"version": "2.0.19",
	"description": "A very simple way to create an error response and send it only showing what you choose to.",
	"repository": "https://github.com/5c077m4n/http-responder/",
	"main": "./dist/index.js",
	"scripts": {
		"clean": "rimraf ./dist && rimraf ./.cache",
		"build": "parcel build ./src/index.js --target node --out-dir ./dist/",
		"lint": "eslint ./src/index.js",
		"lint:staged": "lint-staged",
		"test": "mocha ./test/src.js",
		"prepublish": "run-s lint build test"
	},
	"keywords": [
		"http",
		"response",
		"error",
		"backend",
		"status",
		"statusCode"
	],
	"author": "Roee Shapira",
	"homepage": "https://5c077m4n.github.io/http-responder/",
	"license": "MIT",
	"dependencies": {},
	"devDependencies": {
		"@babel/core": "^7.7.4",
		"@babel/plugin-proposal-class-properties": "^7.7.4",
		"@babel/preset-env": "^7.7.4",
		"chai": "^4.2.0",
		"eslint": "^6.7.1",
		"husky": "^3.1.0",
		"lint-staged": "^9.5.0",
		"mocha": "^6.2.2",
		"npm-run-all": "^4.1.5",
		"parcel-bundler": "^1.12.4",
		"rimraf": "^3.0.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint:staged",
			"pre-push": "run-s lint build test"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix --ignore-pattern 'dist/**'",
			"git add"
		]
	}
}
