{
	"name": "http-responder",
	"version": "1.3.9",
	"description": "A very simple way to create an error response and send it only showing what you choose to.",
	"repository": "https://github.com/5c077m4n/http-responder/",
	"main": "./dist/index.js",
	"scripts": {
		"build": "./node_modules/.bin/eslint ./src/index.js && ./node_modules/.bin/minify src -d dist",
		"test": "mocha",
		"lint": "./node_modules/.bin/eslint ./src/index.js"
	},
	"eslintConfig": {
		"env": {
			"node": true,
			"es6": true
		},
		"parserOptions": {
			"ecmaVersion": 6
		},
		"extends": "eslint:recommended",
		"rules": {
			"no-console": "off"
		}
	},
	"babel": {
		"presets": [
			"es2015"
		],
		"env": {
			"production": {
				"presets": [
					"minify"
				]
			}
		}
	},
	"keywords": [
		"http",
		"response",
		"error",
		"backend",
		"status",
		"statusCode"
	],
	"author": "Roee Shapira",
	"homepage": "https://5c077m4n.github.io/http-responder/",
	"license": "MIT",
	"dependencies": {},
	"devDependencies": {
		"babel-minify": "^0.4.3",
		"chai": "^4.2.0",
		"eslint": "^5.13.0",
		"mocha": "^6.0.0"
	}
}
